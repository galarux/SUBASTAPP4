{
  "name": "subasta-app",
  "version": "1.0.0",
  "description": "Aplicación de subastas en tiempo real para jugadores de fútbol",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:azure": "npm run build:backend && cd frontend && chmod +x build-azure.sh && ./build-azure.sh",
    "build:frontend:azure": "cd frontend && chmod +x build-azure.sh && ./build-azure.sh",
    "build:frontend:force": "cd frontend && npm run build:force",
    "build:frontend:clean": "cd frontend && npm run build:clean",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "db:generate": "cd backend && npm run db:generate",
    "db:push": "cd backend && npm run db:push",
    "db:studio": "cd backend && npm run db:studio"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "subasta",
    "futbol",
    "tiempo-real",
    "react",
    "nodejs",
    "socket.io"
  ],
  "author": "",
  "license": "MIT"
}
